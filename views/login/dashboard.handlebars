<div class="dashboard-header">
<p>Hello {{user.firstName}} {{user.lastName}}</p>
<p id="accountId" title="{{account._id}}">Account ID: {{account._id}}</p> 
<p>Account type: {{account.accountType}}</p>
<form action="/profile">
    <button type="submit" class="btn btn-dark">View Profile</button>
</form>
<br>
</div>


<div id="body-box">
    <div class="dashboard-container">
        <h1>{{title}}</h1>
        
        <p>Balance: {{account.balance}}</p>

        <form action='/deposit/{{account._id}}'>
            <button type="submit" class="btn btn-dark">Make a deposit</button>
        </form>
        <br>
        <form action="/transaction/{{account._id}}">
            <button type="submit" class="btn btn-dark">Make a transaction</button>
        </form>
        <br>

        {{!-- filter by month --}}
        <p>Filter by month</p>
        <form id="selectMonth-form">
            <label for="selectMonth">Date:</label>
            <input id="selectMonth" type="month" name="selectMonth">
            <button type="submit" class="btn btn-dark">Submit</button>
            <button id="showAll" type="button" class="btn btn-dark">All</button>
        </form>

        <p>Transaction History</p>
        <ul id="transList"></ul>
        <p id="noTrans">View your history by first making a deposit or transaction</p>

    {{!-- START: container for history --}}
     {{!-- {{#if trans}}
        <ul>
            {{#each trans}}
                <li>
                    {{this.transAmount}}
                    {{this.date.DD}}.{{this.date.MM}}.{{this.date.YYYY}}
                    {{this.tag}}
                    {{#ifEquals this.toAccountId "external_transaction"}}
                        <a href="/edit/transaction/{{this._id}}">Edit</a>
                        <a href="/delete/transaction/{{this._id}}">Delete</a>     
                    {{/ifEquals}}
                   {{#ifEquals this.toAccountId "internal_deposit"}}
                        <a href="/edit/deposit/{{this._id}}">Edit</a> 
                        <a href="/delete/deposit/{{this._id}}">Delete</a>       
                    {{/ifEquals}}  
                </li>
            {{/each}}
        </ul>
        
        <button onclick="window.print()">Print this page</button>
    {{else}}
        <p>View your history by first making a deposit or transaction</p>
    {{/if}} --}}
    {{!-- END: container for history --}}
    </div>
</div>

<div id="body-box">
  <div class="container">
    <h1>{{title}}</h1>
    <form id="deposit-form" method="post" action="/dashboard/{{accountId}}">
        <div class="form-group">
          <label for="deposit">Deposit Amount:</label>
          <input type="number" class="form-control" placeholder="Enter deposit amount" name="deposit" id="deposit"  min="0.01" step="0.01">
          <div class="invalid-feedback">
              Must enter a positive amount
          </div>
        </div>
        <div class="form-group">
          <label for="tag">Choose a tag:</label>
          <select name="tag" id="tag" class="form-control">        
              <option value="investment">Investment</option>
              <option value="salary">Salary</option>
              <option value="other">Other</option>
          </select>
          <div class="invalid-feedback">
            Must select a tag
          </div>
        </div>
        <button type="submit" id="depositSubmit" class="btn btn-dark">Submit</button>
    </form>
    <div class="error">
      {{warning}} 
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
<script src="/public/js/deposit.js"></script>
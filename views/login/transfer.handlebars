<div id="body-box">
<div class="container">
<h1>{{title}}</h1>

{{#if accts.[1]}}
<form id="transfer-form" method="post" action="/transfer">
    <label for="from">From:</label>
    <select name="from" id="from">
        {{#each accts}}
            <option value={{this}}>{{this}}</option>
        {{/each}}
    </select>
    <br>
    <label for="amount">Amount:</label>
    <input type="number" placeholder="Enter an amount" name="amount" id="amount"  min="0.01" step="0.01">
    <br>
    <label for="to">To:</label>
    <select name="to" id="to">
        {{#each accts}}
            <option value={{this}}>{{this}}</option>
        {{/each}}
    </select>
    <br>
    <button type="submit" class="btn btn-dark">Submit</button>
</form>
{{else}}
<p>You currently don't have any accounts you can transfer to. Try creating another account </p>
{{/if}}

<div class="error">
  {{warning}} 
</div>
</div>
</div>